<!DOCTYPE html>
<html>
<head>
  <title>Amon4</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% unless flash.keys.empty? %>
  <% flash.each do |key,val| %>
    <div class="flash <%= key %>">
      <%= val %>
    </div>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
